{
  "name": "niconico",
  "description": "A nicovideo plug-in for NodeJS",
  "version": "1.1.2",
  "author": "Yasuaki Uechi",
  "main": "lib",
  "scripts": {
    "build": "shx rm -rf lib && tsc",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "docs": "yarn build && typedoc --mode file --out docs --excludeExternals --excludeNotExported --excludePrivate --exclude '**/__tests__/*' src && touch ./docs/.nojekyll",
    "format": "prettier '{examples,src,test}/**/*.{ts,js}' --write",
    "lint": "tslint --project ./tsconfig.json --fix",
    "test": "jest --coverage",
    "watch": "tsc -w"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "axios-cookiejar-support": "^0.4.2",
    "filenamify": "^3.0.0",
    "jest": "^24.5.0",
    "jsdom": "^14.0.0",
    "tough-cookie": "^3.0.1",
    "xml2js": "~0.4.5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/jsdom": "^12.2.3",
    "@types/nock": "^9.3.1",
    "@types/request-promise": "^4.1.41",
    "@types/xml2js": "^0.4.2",
    "coveralls": "^3.0.3",
    "husky": "^1.3.1",
    "jest-playback": "^2.0.2",
    "nock": "^10.0.6",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.4000"
  },
  "bugs": {
    "url": "https://github.com/uetchy/niconico/issues"
  },
  "files": [
    "lib/*.js",
    "lib/*.d.ts"
  ],
  "homepage": "https://github.com/uetchy/niconico#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick"
    }
  },
  "keywords": [
    "niconico",
    "nicovideo"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/uetchy/niconico.git"
  }
}
