{
  "name": "niconico",
  "description": "A nicovideo plug-in for NodeJS",
  "version": "1.1.2",
  "author": "Yasuaki Uechi",
  "main": "lib",
  "scripts": {
    "build": "shx rm -rf lib && tsc",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "docs": "yarn build && typedoc --mode file --out docs --excludeExternals --excludeNotExported --excludePrivate --exclude '**/__tests__/*' src && touch ./docs/.nojekyll",
    "lint": "tslint --project ./tsconfig.json --fix && prettier '{examples,src,test}/**/*.{ts,js}' --write",
    "test": "yarn build && nyc ava --serial",
    "watch": "tsc -w"
  },
  "dependencies": {
    "filenamify": "^3.0.0",
    "jsdom": "^14.0.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.4",
    "xml2js": "~0.4.5"
  },
  "devDependencies": {
    "@types/jsdom": "^12.2.3",
    "@types/nock": "^9.3.1",
    "@types/request-promise": "^4.1.41",
    "@types/xml2js": "^0.4.2",
    "ava": "^1.3.1",
    "coveralls": "^3.0.3",
    "nock": "^10.0.6",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "shx": "^0.3.2",
    "tslint": "^5.14.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.4000"
  },
  "bugs": {
    "url": "https://github.com/uetchy/niconico/issues"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/uetchy/niconico#readme",
  "keywords": [
    "niconico",
    "nicovideo"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/uetchy/niconico.git"
  }
}
